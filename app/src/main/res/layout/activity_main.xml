<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Título de la aplicación (se mantiene) -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_blue"
        android:text="TaskSyncPlus"
        android:gravity="center"
        style="@style/HeaderText" />

    <!-- Navbar superior con tres secciones a TODO el ancho -->
    <LinearLayout
        android:id="@+id/top_navbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/primary_blue"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tab_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Menu"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/tab_pending"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Tareas Pendientes"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp" />

        <TextView
            android:id="@+id/tab_completed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Completadas"
            android:gravity="center"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeStepGranularity="1sp" />

    </LinearLayout>

    <!-- Contenido principal con dos paneles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Panel izquierdo: navegación (solo categorías) -->
        <!-- Ajuste de ancho del sidebar para mejor legibilidad. Hecho por: Daniel Castrillon -->
        <FrameLayout
            android:id="@+id/nav_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/background_gray" />

        <!-- Panel derecho: contenido -->
        <FrameLayout
            android:id="@+id/content_fragment_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/card_background" />

    </LinearLayout>

</LinearLayout>